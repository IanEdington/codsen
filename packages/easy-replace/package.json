{
  "name": "easy-replace",
  "version": "2.7.0",
  "description": "Replace strings with optional lookarounds, but without regexes",
  "main": "er.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "precommit": "npm test && doctoc README.md",
    "test": "standard && nyc --reporter=html --reporter=text ava"
  },
  "repository": "revelt/easy-replace",
  "keywords": [
    "search",
    "negative",
    "positive",
    "lookbehind",
    "lookahead",
    "string",
    "lookaround",
    "easy",
    "replace",
    "replacement",
    "find"
  ],
  "author": {
    "name": "Roy Reveltas",
    "email": "roy@codsen.com",
    "url": "codsen.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/revelt/easy-replace/issues"
  },
  "homepage": "https://github.com/revelt/easy-replace#readme",
  "dependencies": {
    "lodash.isnumber": "*",
    "lodash.toarray": "*",
    "lodash.without": "*"
  },
  "devDependencies": {
    "ava": "*",
    "coveralls": "*",
    "doctoc": "*",
    "husky": "*",
    "nyc": "*",
    "standard": "^10.0.2"
  },
  "ava": {
    "verbose": true
  }
}
