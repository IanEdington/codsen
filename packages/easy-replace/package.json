{
  "name": "easy-replace",
  "version": "2.6.0",
  "description": "Replace strings with optional lookarounds, but without regexes",
  "main": "er.js",
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "precommit": "npm test && doctoc README.md",
    "test": "standard && nyc --reporter=html --reporter=text ava"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/revelt/easy-replace.git"
  },
  "keywords": [
    "search",
    "negative",
    "positive",
    "lookbehind",
    "lookahead",
    "string",
    "lookaround",
    "easy",
    "replace",
    "replacement",
    "find"
  ],
  "author": "Roy Reveltas <roy@codeandsend.com> (http://codeandsend.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/revelt/easy-replace/issues"
  },
  "homepage": "https://github.com/revelt/easy-replace#readme",
  "dependencies": {
    "lodash.isnumber": "*",
    "lodash.toarray": "*",
    "lodash.without": "*"
  },
  "devDependencies": {
    "ava": "*",
    "coveralls": "*",
    "doctoc": "*",
    "husky": "*",
    "nyc": "*",
    "standard": "*"
  },
  "ava": {
    "tap": false,
    "verbose": true
  }
}
