{
  "name": "emlint",
  "version": "2.5.1",
  "description": "Pluggable email template code linter",
  "license": "MIT",
  "engines": {
    "node": ">=8.9"
  },
  "repository": "https://gitlab.com/codsen/codsen/",
  "homepage": "https://gitlab.com/codsen/codsen/tree/master/packages/emlint",
  "author": {
    "email": "roy@codsen.com",
    "name": "Roy Revelt",
    "url": "codsen.com"
  },
  "keywords": [
    "analysis",
    "automatic",
    "automatically",
    "broken",
    "check",
    "code",
    "css",
    "development",
    "errors",
    "fix",
    "html",
    "lint",
    "linter",
    "static",
    "tool",
    "utility",
    "validate",
    "xhtml"
  ],
  "bin": {
    "emlint": "bin/emlint.js"
  },
  "main": "dist/emlint.cjs.js",
  "module": "dist/emlint.esm.js",
  "browser": "dist/emlint.umd.js",
  "scripts": {
    "build": "node bin/helper && rollup -c --silent",
    "dev": "node bin/helper && rollup -c --dev --silent",
    "format": "npm run lect && npm run prettier && npm run lint",
    "lect": "lect",
    "lint": "./node_modules/.bin/eslint \"**/*.js\" --fix --ignore-pattern \"dist/*\" --ignore-pattern \"rollup.config.js\" --ignore-pattern \"tap/**\"",
    "perf": "node perf/check",
    "prepare": "npm run build",
    "prettier": "../../node_modules/prettier/bin-prettier.js '*.{js,css,scss,vue,md}' --write",
    "tap": "tap",
    "pretest": "npm run build",
    "test": "npm run lint && npm run unittest && npm run format",
    "unittest": "./node_modules/.bin/tap --no-only -R 'terse' -o testStats.md && npm run perf",
    "version": "npm run build && git add ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm test"
    }
  },
  "lect": {
    "babelrc": {
      "override": false,
      "set": false
    },
    "badges": {
      "cov": true,
      "deps": true,
      "deps2d": true,
      "dev": true,
      "downloads": true,
      "license": true,
      "node": true,
      "npm": true,
      "overall": true,
      "runkit": true,
      "travis": true,
      "vulnerabilities": true
    },
    "eslintrc": {
      "add": [],
      "remove": []
    },
    "files": {
      "delete": [],
      "write_hard": [
        {
          "contents": "",
          "name": ""
        }
      ],
      "write_soft": [
        {
          "contents": "",
          "name": ""
        }
      ]
    },
    "header": {
      "dontQuoteDescription": false,
      "rightFloatedBadge": []
    },
    "licence": {
      "extras": [
        ""
      ]
    },
    "npmignore": {
      "badFiles": [],
      "badFolders": [],
      "goodFiles": [],
      "goodFolders": []
    },
    "req": "{ Linter, version }",
    "special": true,
    "various": {
      "devDependencies": [
        "ast-deep-contains",
        "browser-sync",
        "ranges-apply",
        "rollup-plugin-node-builtins",
        "rollup-plugin-node-globals"
      ],
      "travisVersionsOverride": []
    }
  },
  "tap": {
    "coverage-report": "json-summary",
    "timeout": 0
  },
  "dependencies": {
    "codsen-tokenizer": "^2.3.0",
    "define-lazy-prop": "^2.0.0",
    "he": "^1.2.0",
    "html-entities-not-email-friendly": "^0.1.12",
    "line-column": "^1.0.2",
    "lodash.clonedeep": "^4.5.0",
    "matcher": "^2.1.0",
    "string-fix-broken-named-entities": "^2.5.3",
    "string-left-right": "^2.3.12"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "ast-deep-contains": "^1.1.2",
    "benchmark": "^2.1.4",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-row-num": "^1.1.1",
    "js-row-num-cli": "^1.6.11",
    "lect": "^0.11.4",
    "prettier": "^1.19.1",
    "ranges-apply": "^3.0.45",
    "rollup": "^1.27.13",
    "rollup-plugin-ascii": "^0.0.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-cleanup": "^3.1.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-strip": "^1.2.2",
    "rollup-plugin-terser": "^5.1.3",
    "tap": "^14.10.2"
  }
}
