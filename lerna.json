{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "[skip ci] chore: Release"
    }
  },
  "ignoreChanges": [
    "packages/*/CHANGELOG.md",
    "packages/*/package.json",
    "packages/*/testStats.json",
    "packages/perf/*"
  ],
  "lifecycle": {
    "version": "npm run build && git add ."
  },
  "packages": [
    "packages/*"
  ],
  "version": "independent"
}
