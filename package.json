{
  "name": "codsen",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "npx lerna bootstrap --hoist",
    "fresh": "rm -rf node_modules && npx lerna clean -y && npm run bootstrap && lerna run ava",
    "build": "lerna run test --bail --concurrency 2",
    "cm": "git-cz",
    "pub": "lerna version --conventional-commits && lerna publish from-package --no-git-reset",
    "pubold": "lerna publish --conventional-commits --no-git-reset",
    "license": "make clone-license"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
