{
  "name": "codsen-monorepo",
  "version": "0.0.0-ignore",
  "description": "Monorepo of all our npm libraries",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8.9",
    "npm": ">=5.6.0"
  },
  "repository": "https://gitlab.com/codsen/codsen/",
  "homepage": "https://codsen.com",
  "author": "Roy Revelt <roy@codsen.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "bootstrap": "FORCE_COLOR=1 npx lerna bootstrap --hoist --ignore-scripts",
    "build": "lerna run build --bail && lerna run ci_test --bail && npm run readme:generate",
    "build:just": "lerna run build --bail",
    "cm": "git-cz -n",
    "format": "lerna run format",
    "fresh": "npm run wipe && npm run bootstrap && npm run build",
    "info": "node ./scripts/generate-info.js",
    "lect": "make run-lect",
    "pub:vers": "lerna version --conventional-commits --no-commit-hooks --yes && lernacleanchangelog '**'",
    "readme:edit": "npm-watch",
    "readme:generate": "node ./scripts/generate-readme.js",
    "republish": "lerna run republish",
    "test": "FORCE_COLOR=1 lerna run ci_test && npm run readme:generate",
    "test:full": "FORCE_COLOR=1 lerna run test --stream --concurrency 1 && npm run readme:generate && npm run info",
    "test:only": "FORCE_COLOR=1 lerna run unittest --stream --concurrency 1 && npm run readme:generate && npm run info",
    "test:examples": "FORCE_COLOR=1 lerna run test:examples",
    "wipe": "rm package-lock.json || true && rm -rf node_modules && FORCE_COLOR=1 npx lerna clean -y"
  },
  "watch": {
    "readme:generate": "scripts/generate-readme.js"
  },
  "browserslist": "> 0.25%, not dead",
  "dependencies": {},
  "devDependencies": {
    "benchmark": "^2.1.4",
    "edit-package-json": "^0.1.33",
    "commitizen": "^4.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-unsanitized": "^3.1.2",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-test-num": "^1.3.6",
    "eslint-plugin-row-num": "^1.2.11",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "execa": "^4.0.3",
    "simple-git": "^2.20.1",
    "lect": "^0.14.0",
    "lerna": "^3.22.1",
    "lerna-clean-changelogs-cli": "^1.2.67",
    "npm-watch": "^0.7.0",
    "object-path": "^0.11.4",
    "prettier": "^2.1.2",
    "esm": "^3.2.25",
    "tap-parse-string-to-object": "^1.2.20"
  }
}
