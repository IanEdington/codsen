{
  "name": "codsen-monorepo",
  "version": "0.0.0-ignore",
  "description": "Monorepo of all our npm libraries",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8.9",
    "npm": ">=5.6.0"
  },
  "repository": "https://gitlab.com/codsen/codsen/",
  "homepage": "https://codsen.com",
  "author": "Roy Revelt <roy@codsen.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "all:lect": "make run-lect",
    "all:test:full": "FORCE_COLOR=1 lerna run test --concurrency 1",
    "all:test:only": "FORCE_COLOR=1 lerna run unittest --concurrency 1",
    "bootstrap": "FORCE_COLOR=1 npx lerna bootstrap --hoist --ignore-scripts",
    "build": "FORCE_COLOR=1 lerna run test --bail --concurrency 1 && npm run readme:generate",
    "build:just": "lerna run build --bail",
    "cm": "git-cz -n",
    "fresh": "npm run wipe && npm run bootstrap && npm run build",
    "pub:vers": "lerna version --conventional-commits --no-commit-hooks --yes && lernacleanchangelog '**'",
    "publish": "FORCE_COLOR=1 npx lerna version --conventional-commits --yes && lernacleanchangelog '**' && npm run readme:generate && git add packages && git commit -m \"chore: Automated build tasks\" --no-verify && npm run republish",
    "readme:edit": "npm-watch",
    "readme:generate": "node ./scripts/generate-readme.js",
    "republish": "make republish",
    "test": "lerna run unittest --concurrency 1",
    "wipe": "rm -rf node_modules && FORCE_COLOR=1 npx lerna clean -y"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run test --since --concurrency 2 && git add packages/*/dist/*.*"
    }
  },
  "watch": {
    "readme:generate": "scripts/generate-readme.js"
  },
  "dependencies": {},
  "devDependencies": {
    "@pectin/cli": "^3.0.1",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "lect": "^0.7.0",
    "lerna": "3.13.4",
    "lerna-clean-changelogs-cli": "^1.2.14",
    "npm-watch": "^0.6.0",
    "prettier": "^1.17.1"
  }
}
