{
  "name": "codsen",
  "private": true,
  "license": "MIT",
  "engines": {
    "npm": ">=5.6.0",
    "node": ">=8.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/codsen/codsen.git"
  },
  "scripts": {
    "bootstrap": "FORCE_COLOR=1 npx lerna bootstrap --hoist",
    "wipe": "rm -rf node_modules && npx lerna clean -y",
    "fresh": "npm run wipe && npm run bootstrap && npm run build",
    "build": "FORCE_COLOR=1 lerna run test --bail --concurrency 2",
    "cm": "git-cz",
    "pub": "FORCE_COLOR=1 lerna version --conventional-commits && lerna run test --since && git add . && lerna publish from-package",
    "pubold": "FORCE_COLOR=1 lerna publish --conventional-commits --no-git-reset",
    "license": "make clone-license"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.8.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "FORCE_COLOR=1 lerna run test --since --concurrency 2 && git add ."
    }
  }
}
