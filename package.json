{
  "name": "codsen",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bootstrap": "FORCE_COLOR=1 npx lerna bootstrap --hoist",
    "fresh": "rm -rf node_modules && npx lerna clean -y && npm run bootstrap && npm run build",
    "build": "FORCE_COLOR=1 lerna run test --bail --concurrency 2",
    "cm": "git-cz",
    "pub": "FORCE_COLOR=1 lerna version --conventional-commits && lerna publish from-package --no-git-reset",
    "pubold": "lerna publish --conventional-commits --no-git-reset",
    "license": "make clone-license"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "FORCE_COLOR=1 lerna run test --since --concurrency 2"
    }
  }
}
