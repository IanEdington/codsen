{
  "name": "codsen",
  "private": true,
  "license": "MIT",
  "engines": {
    "npm": ">=5.6.0",
    "node": ">=8.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/codsen/codsen.git"
  },
  "scripts": {
    "bootstrap": "FORCE_COLOR=1 npx lerna bootstrap --hoist",
    "wipe": "rm -rf node_modules && npx lerna clean -y",
    "fresh": "npm run wipe && npm run bootstrap && npm run build",
    "build": "FORCE_COLOR=1 lerna run test --bail --concurrency 1",
    "cm": "git-cz",
    "publish": "FORCE_COLOR=1 lerna version --conventional-commits && git add . && lerna publish from-package --yes && git push",
    "license": "make clone-license",
    "lect": "make run-lect",
    "readme": "node ./scripts/generate-readme.js"
  },
  "devDependencies": {
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "lerna": "^3.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "FORCE_COLOR=1 lerna run test --since --concurrency 2 && git add ."
    }
  }
}
