{
  "name": "codsen-monorepo",
  "version": "0.0.0-ignore",
  "description": "Monorepo of all our npm libraries",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=8.9",
    "npm": ">=5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://bitbucket.org/codsen/codsen.git"
  },
  "homepage": "https://codsen.com",
  "author": "Roy Revelt <roy@codsen.com>",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "bootstrap": "FORCE_COLOR=1 npx lerna bootstrap --hoist",
    "clean": "git clean -fdx packages",
    "fresh": "npm run wipe && npm run bootstrap",
    "prerelease": "npm run clean && pectin",
    "pretest": "pectin",
    "release": "lerna publish",
    "wipe": "rm -rf node_modules && npx lerna clean -y"
  },
  "husky": {
    "hooks": {
      "pre-commit": "FORCE_COLOR=1 lerna run test --since --concurrency 2 && git add packages/*/dist/*.*"
    }
  },
  "watch": {
    "readme:generate": "scripts/generate-readme.js"
  },
  "devDependencies": {
    "@pectin/cli": "^3.0.1",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^3.6.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.10.6",
    "npm-watch": "^0.5.0",
    "prettier": "^1.15.3"
  }
}
